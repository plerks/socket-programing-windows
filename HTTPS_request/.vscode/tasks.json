{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 生成活动文件",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${cwd}/src/HttpsRequestDemo.c",
                "${workspaceFolder}/lib/MyHttps.c",
                "-lssl",
                "-lcrypto",
                "-lws2_32",
                "-I",
                "${workspaceFolder}/include",
                "-o",
                "${cwd}/src/HttpsRequestDemo"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                /* If there are multiple "isDefault": true tasks, click the run button at the top right corner, VSCode will let
                you choose, else just run the default one. */
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}